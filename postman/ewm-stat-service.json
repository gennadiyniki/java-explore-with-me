		{
			"name": "Получение статистики по посещениям. (Тест на опциональность параметра uris)",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [

							"const main = async () => {",
							"    const baseUrl = pm.collectionVariables.get('baseUrl') || 'http://localhost:8081';",
							"    const api = new API(pm, false, baseUrl);",
							"    const rnd = new RandomUtils();",
							"",
							"    try {    ",
							"        pm.collectionVariables.set(\"uri\", '/events');  ",
							"        let post1 = rnd.getPost();",
							"        let post2 = rnd.getPost();",
							"        post1['uri'] = '/events';",
							"        post2['uri'] = '/events/5';",
							"        await api.addPost(post1);",
							"        await api.addPost(post2);",
							"",
							"        let source = await api.getPosts(['/events']);",
							"        pm.collectionVariables.set('source', source);",
							"        ",
							"    } catch(err) {",
							"        console.error(\"Ошибка при подготовке тестовых данных.\", err);",
							"    }",
							"};",
							"",
							"const interval = setInterval(() => {}, 1000);",
							"",
							"setTimeout(async () => ",
							"    {",
							"        try {",
							"            await main();",
							"        } catch (e) {",
							"            console.error(e);",
							"        } finally {",
							"            clearInterval(interval);",
							"        }",
							"    },  ",
							"    100 ",
							");"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Ответ должен содержать код статуса 200 и данные в формате json при запросе без опционального параметра uris\", function () {",
							"    pm.response.to.be.ok;    ",
							"    pm.response.to.be.withBody;",
							"    pm.response.to.be.json;",
							"});",
							"",
							"const target = pm.response.json();",
							"const source = pm.collectionVariables.get('source');",
							"",
							"pm.test(\"При запросе по конкретному uris должны получить 1 запись\", function () {",
							"    pm.expect(source.length).to.equal(1);",
							"});",
							"",
							"pm.test(\"При запросе без uris должны получить больше 1 записи\", function () {",
							"    pm.expect(target.length).to.be.above(1);",
							"});",
							"",
							"pm.test(\"Посты должны содержать поля: app, uri, hits\", function () {",
							"    pm.expect(target[0]).to.have.all.keys('app', 'uri', 'hits');",
							"    pm.expect(target[1]).to.have.all.keys('app', 'uri', 'hits');",
							"    pm.expect(source[0]).to.have.all.keys('app', 'uri', 'hits');",
							"});"
						],
						"type": "text/javascript"
					}
				}
