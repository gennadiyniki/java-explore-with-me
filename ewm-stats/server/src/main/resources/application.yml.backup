# ewm-stats/server/src/main/resources/application.yml
server:
  port: 9090

spring:
  application:
    name: ewm-stats-server
  
  # По умолчанию H2 (для тестов)
  datasource:
    url: jdbc:h2:mem:statsdb;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE
    username: sa
    password:
    driver-class-name: org.h2.Driver
  jpa:
    hibernate:
      ddl-auto: create-drop
    database-platform: org.hibernate.dialect.H2Dialect
    show-sql: false

logging:
  level:
    root: INFO
    ru.practicum: DEBUG